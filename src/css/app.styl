// app global css
.noDeco{
  text-decoration:none;
  outline: 0;
}

.sticky{
    position: -webkit-sticky;
    position: sticky;
    top: 10vh; 
}
.hide{
    visibility:hidden;
}


input[type=number]::-webkit-outer-spin-button,
input[type=number]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
input[type=number] {
    -moz-appearance:textfield;
}